<div class="body">

  <% provide(:title, @user.username) %>
  <div class="profile_gravitar">
    <div class="profile_details">
      <%= gravatar_for @user %>
      <h1>
        <%= @user.username %>
      </h1>
    </div>
  </div>

  <p id="notice"><%= notice %></p>
  <div class="account_links">
    <%= link_to 'pending orders', carts_path %>
    <%= link_to 'update login details', edit_user_path(@user) %>
    <%= link_to 'subscription', subscribe_path %>


    <%= link_to 'logout', logout_path %>
  </div>
</div>